@import "../../style/weui.wxss";
@import "../official/official.wxss";

.page {
  background: #F4F4F4;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.goTop{
  position: fixed;
  bottom: 20px;
  right: 15px;
  width: 45px;
  height: 40px;
  z-index: 15;
}

.goTop:active{
  opacity: 0.7;
  transform: scale(0.95);
  transition: 0.3s ease;
}

.articles{
  flex-direction: column; 
}

.article_block{
  width: 92%;
  margin: 15rpx;
  padding-bottom: 10rpx;
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0rpx 3rpx 4rpx 2rpx gainsboro;
}

.article_block:active{
  transform: scale(0.9);
  opacity: 0.7;
  transition: 0.1s ease;
}

.thumbnail_container{
  width: 100%;
}

.article_thumbnail{
  width: 100%;
  height: 340rpx
}

.overview{
  margin-left: 15rpx;
  margin-top: -50rpx;
  display: flex;
}

.title{
  margin-top:10rpx;
  text-align: justify;
  font-size: 30rpx;
}

.foot{
  display: flex;
  bottom: 0;
}

.tag_block{
  height: 40rpx;
  border: 1px solid #38706F;
  margin-top: 10rpx;
  text-align: center;
  width: 20%;
}

.tag_text{
  color:#38706F;
  letter-spacing:5rpx;
  font-size:25rpx;
  line-height:40rpx;
}

.my_white{
  color: white;
  text-shadow: 0px 2px 1px #555;
}

.my_big{
  font-size: 100rpx;
}

.my_small{
  font-size: 27rpx;
}

.my_gray{
  color: gray;
}