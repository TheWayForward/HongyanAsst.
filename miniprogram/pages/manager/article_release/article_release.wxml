<view class="page">
	<view class="page__bd">
		<view class="weui-cells__title">基本信息</view>
		<view class="weui-cells weui-cells_after-title">
			<!--article title-->
			<view class="weui-cell weui-cell_active">
				<view class="weui-cell__hd">
					<view class="weui-label">标题</view></view>
				<view class="weui-cell__bd">
					<input class="weui-input" bindinput="input_title" placeholder="输入文章标题" maxlength="50" /></view>
			</view>
			<!--article tag-->
			<view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-after">
				<view class="weui-cell__hd">
					<view class="weui-label">标签</view></view>
				<view class="weui-cell__bd">
					<picker bindchange="bind_tag_change" value="{{tag_index}}" range="{{tags}}">
						<view class="weui-select weui-select_in-select-after">{{tag}}</view></picker>
				</view>
			</view>
			<!--in behalf of the organization or not-->
			<view class="weui-cell weui-cell_switch">
				<view class="weui-cell__bd">以"鸿雁车协"名义发表</view>
				<view class="weui-cell__ft">
					<switch bindchange="bind_author_change" checked /></view>
			</view>
			<!--bind event-->
			<view class="weui-cell weui-cell_switch">
				<view class="weui-cell__bd">关联活动</view>
				<view class="weui-cell__ft">
					<switch bindchange="show_bind_event" /></view>
			</view>
			<view class="weui-cells weui-cells_after-title" hidden="{{!is_bind_event_hide}}">
				<view wx:for="{{events}}" wx:key="_id" class="weui-cell weui-cell_access" hover-class="weui-cell_active" style="background: {{item.background}};">
					<view class="weui-cell__hd">
						<image src="{{item.poster}}" class="rounded-10 shadow" style="margin-right: 16px;vertical-align: middle;width:30px; height: 30px;" mode="aspectFill" data-action="{{item.poster}}" bindtap="preview"></image>
					</view>
					<view class="weui-cell__bd" data-action="{{item}}" bindtap="select_event">{{item.name}}</view>
					<view class="weui-cell__ft" data-action="{{item}}" bindtap="select_event">{{item.date}}</view></view>
			</view>
		</view>
		<!--article cover-->
		<view class="weui-cells__title">封面</view>
		<view class="page__bd rounded-20" style="overflow: hidden;">
			<view class="weui-cells">
				<view class="weui-cell">
					<view class="weui-cell__bd">
						<view class="weui-uploader">
							<view class="weui-uploader__bd">
								<view class="weui-uploader__files">
									<block wx:for="{{files}}" wx:key="*this">
										<view class="weui-uploader__file rounded-10 shadow" style="overflow:hidden;">
											<image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
											<view class="upload_image_delete_cover" bindtap="delete_image">
												<!--trash-->
												<image class="upload_image_delete" mode="aspectFill" src="../../../images/trash.png"></image>
											</view>
										</view>
									</block>
								</view>
								<view class="weui-uploader__input-box rounded-10 shadow" hidden="{{is_upload_add_hide}}">
									<view class="weui-uploader__input" bindtap="choose_image"></view>
								</view>
							</view>
						</view>
					</view>
				</view>
			</view>
		</view>
		<view class="weui-btn-area">
			<button class="weui-btn shadow" type="primary" bindtap="submit" disabled="{{disabled}}">提交</button></view>
		<!--bottom line-->
		<view class="weui-loadmore weui-loadmore_line weui-loadmore_dot"></view>
	</view>
</view>

<view class="page">
    <view class="weui-form__control-area" style="margin-top:0;">
        <view class="weui-cells__group weui-cells__group_form">
            <view class="weui-cells" style="border-radius:0 0 20rpx 20rpx;">
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__hd" style="position: relative; margin-right: 10px;">
                        <image src="{{user.avatar}}" class="rounded-10 shadow"
                            style="width: 80rpx; height: 80rpx; display: block;" data-action="{{user.avatar}}"
                            bindtap="preview" mode="aspectFill"></image>
                    </view>
                    <view class="weui-cell__bd ml-50">
                        <view>{{user.nickname}}</view>
                        <view style="font-size: 20rpx; color: gray;">活动提交者将作为领骑</view>
                    </view>
                </view>
            </view>
            <view class="weui-cells__title" style="margin-top:20rpx;">活动信息</view>
            <view class="weui-cells__group weui-cells__group_form">
                <view class="weui-cells weui-cells_form" style="border-radius:20rpx 20rpx 0 0;">
                    <!--name-->
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd"><label class="weui-label">名称</label></view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" placeholder="填写活动名称" placeholder-class="weui-input__placeholder"
                                bindinput="input_name" />
                        </view>
                    </view>
                    <!--date-->
                    <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-before">
                        <view class="weui-cell__hd">
                            <picker mode="date" value="{{event_date}}" start="{{event_date_start}}"
                                end="{{event_date_end}}" bindchange="bind_event_date_change">
                                <view class="weui-select" style="width: 3em">日期</view>
                            </picker>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" value="{{event_date}}" disabled="true"></input>
                        </view>
                    </view>
                    <!--time-->
                    <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-before">
                        <view class="weui-cell__hd">
                            <picker mode="time" value="{{event_time}}" start="{{event_time_start}}" end="{{event_time_end}}" bindchange="bind_event_time_change">
                                <view class="weui-select" style="width: 3em">时间</view>
                            </picker>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" value="{{event_time}}" disabled="true"></input>
                        </view>
                    </view>
                    <!--distance-->
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd"><label class="weui-label">里程(km)</label></view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" placeholder="填写数字" type="digit"
                                placeholder-class="weui-input__placeholder" bindinput="input_distance" />
                        </view>
                    </view>
                    <!--location start-->
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd"><label class="weui-label">起点</label></view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" id="start" bindtap="choose_location" placeholder="点击选择地点"
                                disabled="true" placeholder-class="weui-input__placeholder" value="{{name_start}}" />
                        </view>
                    </view>
                    <!--location return-->
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd"><label class="weui-label">途经地标</label></view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" id="return" bindtap="choose_location" placeholder="点击选择地点"
                                disabled="true" placeholder-class="weui-input__placeholder" value="{{name_return}}" />
                        </view>
                    </view>
                    <!--difficulty-->
                    <view class="weui-cell weui-cell_active">
                        <view class="weui-cell__hd"><label class="weui-label">难度</label></view>
                        <slider class="weui-cell__bd" min="1" max="6" step="1" bindchanging="slide_difficulty"></slider>
                        <view class="weui-slider-box__value">{{difficulty}}</view>
                    </view>
                </view>
            </view>
            <view class="weui-cells__title" style="margin-top:20rpx;">定位设备</view>
            <view class="weui-cells__group weui-cells__group_form">
                <view class="weui-cells weui-cells_form">
                    <view class="weui-cell weui-cell_active weui-cell_switch">
                        <view class="weui-cell__bd">使用定位设备</view>
                        <view class="weui-cell__ft">
                            <label class="weui-switch-cp">
                                <switch class="weui-switch-cp__input" bindchange="show_bind_device" />
                                <view class="weui-switch-cp__box"></view>
                            </label>
                        </view>
                    </view>
                    <view class="weui-cell weui-cell_active weui-cell_select weui-cell_select-before"
                        hidden="{{is_bind_device_hide}}">
                        <view class="weui-cell__hd">
                            <picker value="{{tag_index}}" range="{{tags}}"
                                bindchange="bind_tag_change">
                                <view class="weui-select" style="width: 3em">标签</view>
                            </picker>
                        </view>
                        <view class="weui-cell__bd">
                            <input class="weui-input" value="{{tag}}" disabled="true"></input>
                        </view>
                    </view>
                </view>
            </view>
            <!--detail-->
            <view class="weui-cells__title" style="margin-top:20rpx;">活动简介</view>
            <view class="weui-cells weui-cells_form">
                <view class="weui-cell">
                    <view class="weui-cell__bd">
                        <textarea class="weui-textarea" placeholder="填写活动简介" maxlength="200"
                            bindinput="input_detail"></textarea>
                        <view class="weui-textarea-counter"><text>{{text_counter}}</text></view>
                    </view>
                </view>
            </view>
            <!--poster-->
            <view class="weui-cells__title" style="margin-top:20rpx;">活动海报</view>
            <view class="weui-cell bg-white" style="border-radius:0 0 20rpx 20rpx;">
                <view class="weui-cell__bd">
                    <view class="weui-uploader">
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files">
                                <block wx:for="{{files}}" wx:key="*this">
                                    <view class="weui-uploader__file rounded-10 shadow" style="overflow:hidden;">
                                        <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                                        <view class="upload_image_delete_cover" bindtap="delete_image">
                                            <!--trash-->
                                            <image class="upload_image_delete" mode="aspectFill"
                                                src="../../../images/trash.png"></image>
                                        </view>
                                    </view>
                                </block>
                            </view>
                            <view class="weui-uploader__input-box rounded-10 shadow" hidden="{{is_upload_add_hide}}">
                                <view class="weui-uploader__input" bindtap="choose_image"></view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <!--submit-->
    <view class="weui-btn-area">
        <button class="weui-btn shadow" style="margin-top:-30rpx;" type="primary" bindtap="submit"
            disabled="{{!is_submission_available}}">
            <view class="d-inline-block" hidden="{{is_submission_available}}"><i class="weui-loading"></i></view>提交
        </button>
    </view>
    <!--bottom line-->
    <view class="weui-loadmore weui-loadmore_line weui-loadmore_dot"></view>
</view>