<view class="page">
  <view class="weui-form bg-standard" style="padding-top:0;">
    <view class="weui-form__control-area" style="margin-top:0;">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells weui-cells_form">
          <view class="weui-cell weui-cell_active weui-cell_switch">
            <view class="weui-cell__bd">添加车辆</view>
            <view class="weui-cell__ft">
              <label class="weui-switch-cp">
                <switch class="weui-switch-cp__input" bindchange="show_add_bicycle"></switch>
                <view class="weui-switch-cp__box"></view>
              </label>
            </view>
          </view>
          <view hidden="{{is_add_bicycle_hide}}">
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">
                <label class="weui-label">名称</label>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="填写车辆名称" placeholder-class="weui-input__placeholder" bindinput="input_add_bicycle_name"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">
                <label class="weui-label">编号</label>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="填写车辆数据编号" placeholder-class="weui-input__placeholder" type="number" bindinput="input_add_bicycle_id"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">
                <label class="weui-label">品牌</label>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="填写车辆品牌" placeholder-class="weui-input__placeholder" bindinput="input_add_bicycle_brand"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">
                <label class="weui-label">类型</label>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="填写车辆类型" placeholder-class="weui-input__placeholder" bindinput="input_add_bicycle_type"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">
                <label class="weui-label">价格</label>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="填写车辆价格" placeholder-class="weui-input__placeholder" type="digit" bindinput="input_add_bicycle_price"/>
              </view>
            </view>
            <view class="weui-cell weui-cell_active">
              <view class="weui-cell__hd">
                <label class="weui-label">出厂时间</label>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" placeholder="填写车辆出厂时间" placeholder-class="weui-input__placeholder" type="number" 
                bindinput="input_add_bicycle_manufacture_time"/>
              </view>
            </view>
            <view class="weui-cell">
              <button class="weui-btn weui-btn_primary" bindtap="submit_add_bicycle">提交</button>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>