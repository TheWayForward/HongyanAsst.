.page{
  background-color: #F6F6F6;
}

.album_title{
  background: gainsboro;
  width: 95%;
  margin: 0 auto;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  text-align: left;
  align-items: center;
  flex-wrap: wrap;
}

.album_title_right{
  margin: 0 auto;
  padding: 10rpx 0 10rpx;
  width: 65%;
}

.album_title_poster{
  width: 200rpx;
  height: 200rpx;
  margin-left: 10rpx;
}

.album_title_text{
  margin: 0 auto;
  line-height: 50rpx;
}

.album_title_detail{
  margin: 0 auto;
  font-size: 25rpx;
  text-indent: 50rpx;
  text-align: justify;
}

.snapshots_align{
  width: 100%;
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  text-align: left;
  align-items: center;
  flex-wrap: wrap;
}

.snapshot_box{
  height: 180rpx;
  width: 25%;
  padding: 0;
  margin-bottom: 5rpx;
  text-align: center;
  align-items: center;
  overflow: hidden;
}

.snapshot_inner_box{
  width: 94%;
  margin: 0 auto;
  padding: 0;
  border-radius: 10rpx;
  height: 175rpx;
  overflow: hidden;
}

.snapshot{
  height: 180rpx;
  width: 180rpx;
}