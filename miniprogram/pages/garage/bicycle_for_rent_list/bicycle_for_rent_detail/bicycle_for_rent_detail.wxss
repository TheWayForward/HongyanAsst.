.bicycle_image_align{
  position: relative;
  height: 500rpx;
  width: 100%;
}

.bicycle_image{
  height: 500rpx;
  width: 100%;
  position: fixed;
}

.bicycle_info{
  width: 100%;
}

.bicycle_info_tag{
  padding: 5px 20rpx 10rpx 20rpx;
  width: 625rpx;
  margin: 0 auto;
  background-color: #fff;
  border-radius: 20rpx;
  position: absolute;
  left: 0; 
  right: 0; 
  margin-left: auto; 
  margin-right: auto; 
  opacity: 0.95;
}

.bicycle_info_tag_top{
  width: 100%;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.bicycle_info_tag_top_left{

}

.bicycle_name{
  font-weight: bold;
  font-size: 35rpx;
}

.bicycle_detail{
  font-size: 26rpx;
  padding: 10rpx 0;
  color: #6A5E5C;
}

.share{
  width: 50rpx;
  height: 50rpx;
  margin: -10rpx 10rpx 0 10rpx;
}

.bicycle_info_bottom{
  display: flex;
  align-items: center;
  color: #bbb;
  font-size: 28rpx;
  line-height: 80rpx;
}

.avatar{
  height: 60rpx;
  width: 60rpx;
  margin-left: 10rpx;
  align-self: center;
}

.bicycle_detail_title{
  font-weight: bold;
  font-size: 35rpx;
}