<view class="page">
  <view class="map shadow rounded-20">
  <!--40.157306,116.288791, when onenet is down-->
    <map style="width: 100%; height: {{height}}px;" id="myMap" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{markers}}" covers="{{covers}}" bindmarkertap="show_snapshot_from_map" show-location>
        <view class="dynamic_data_group" hidden="{{is_dynamic_data_hide}}">
            <view class="dynamic_data shadow" hover-class="hv">
                <view class="dynamic_data_title">速率：(kph)</view>
                <view class="dynamic_data_detail">{{speed}}</view>
            </view>
        </view>
    </map>
  </view>
  <view class="page__bd">
		<view class="weui-panel weui-panel_access">
            <!--previewer title-->
			<view class="weui-panel__hd">图片查看</view>
			<view class="weui-panel__bd" hidden="{{is_image_previewer_hide}}">
				<a class="weui-media-box weui-media-box_appmsg">
                    <!--snapshot-->
					<view class="weui-media-box__hd rounded-10 shadow" style="overflow: hidden;" hover-class="hv">
						<image class="weui-media-box__thumb" src="{{current_marker.url}}" mode="aspectFill" bindtap="preview" data-action="{{current_marker.url}}" lazy-load="true" alt></image>
					</view>
					<view class="weui-media-box__bd">
                        <!--image name-->
						<view class="weui-media-box__title" style="word-wrap: break-word;word-break: normal;">{{current_marker.name}}</view>
                        <!--image desc-->
						<view class="weui-media-box__desc">拍摄:{{current_marker.taker}}</view>
					</view>
				</a>
			</view>
			<view class="weui-panel__ft">
				<a class="weui-cell weui-cell_active weui-cell_access weui-cell_link">
                    <!--show all images in this event-->
					<view class="weui-cell__bd" bindtap="show_all_snapshots">{{all_snapshots_tip}}</view>
				</a>
			</view>
			<view wx:for="{{markers}}" wx:if="{{item.is_snapshot}}" class="weui-panel__bd" hidden="{{is_snapshots_hide}}" >
				<a class="weui-media-box weui-media-box_appmsg">
                    <!--snapshot-->
					<view class="weui-media-box__hd rounded-10 shadow" style="overflow: hidden;" hover-class="hv">
						<image class="weui-media-box__thumb" src="{{item.url}}" mode="aspectFill" bindtap="preview" data-action="{{item.url}}" lazy-load="true" alt></image>
					</view>
					<view class="weui-media-box__bd" bindtap="show_snapshot_from_list" data-action="{{item}}">
                        <!--image name-->
						<view class="weui-media-box__title" style="word-wrap: break-word;word-break: normal;">{{item.name}}</view>
                        <!--image desc-->
						<view class="weui-media-box__desc">拍摄:{{item.taker}}</view>
					</view>
				</a>
			</view>
		</view>
	</view>
    <view class="page__bd rounded-20" style="overflow: hidden;" hidden="{{is_uploader_hide}}">
        <view class="weui-cells">
        <view class="weui-panel weui-panel_access">
            <!--uploader title-->
			<view class="weui-panel__hd">图片上传</view>
		</view>
            <view class="weui-cell">
                <view class="weui-cell__bd">
                    <view class="weui-uploader">
                        <view class="weui-uploader__hd">
                          <view class="weui-uploader__overview">
                              <view class="weui-uploader__title">{{tip}}</view>
                          </view>
                          <view class="weui-uploader__tips" wx:if="{{tip_second[0]}}">
                            {{tip_second}}
                          </view>
                        </view>
                        <view class="weui-uploader__bd">
                            <view class="weui-uploader__files" id="uploaderFiles">
                                <block wx:for="{{files}}" wx:key="*this">
                                    <view class="weui-uploader__file rounded-10 shadow" bindtap="preview" bindlongpress="delete_image" data-action="{{item}}" style="overflow: hidden;">
                                        <image class="weui-uploader__img" src="{{item}}" mode="aspectFill" />
                                    </view>
                                </block>
                            </view>
                            <view class="weui-uploader__input-box rounded-10" hidden="{{is_upload_add_hide}}">
                                <view class="weui-uploader__input" bindtap="choose_image"></view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
            <view class="weui-cells__title">图片备注</view>
            <view class="weui-cells weui-cells_after-title">
                <view class="weui-cell weui-cell_active">
                    <view class="weui-cell__bd">
                        <input class="weui-input" value="{{input_value}}" placeholder="说点儿什么..." maxlength="30" bindinput="input"/>
                    </view>
                </view>
            </view>
            <view class="weui-cell">
                <button class="weui-btn shadow" type="primary" disabled="{{!files.length}}" bindtap="upload_images">上传</button>
            </view>
        </view>
    </view>
    <!--footer-->
    <view class="footer mb-20">
        <view class="weui-footer">
            <!--line-->
            <view class="weui-loadmore weui-loadmore_line weui-loadmore_dot"></view>
            <view class="weui-footer__text">{{tip_footer}}</view>
        </view>
    </view>
</view>