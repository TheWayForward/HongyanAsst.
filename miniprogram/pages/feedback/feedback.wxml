<view class="page">
    <view class="page__bd">
        <view class="weui-cells__title">反馈内容</view>
        <view class="weui-cells weui-cells_after-title rounded-20">
            <view class="weui-cell weui-cell_active">
                <view class="weui-cell__bd">
                    <textarea class="weui-textarea" placeholder="描述您在测试中遇到的问题" style="height: 3.3em"
                        bindinput="input_detail" maxlength="500" />
                    </view>
            </view>
        </view>

        <view class="weui-btn-area">
            <button class="weui-btn shadow" type="primary" bindtap="submit" disabled="{{disabled}}">提交反馈</button>
        </view>

        <!--bottom line-->
        <view class="weui-loadmore weui-loadmore_line weui-loadmore_dot"></view>
    </view>
</view>