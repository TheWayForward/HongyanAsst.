page {
  background: #E6E6E6;
}

.title {
  font-weight: bold;
  margin-bottom: 0rpx
}

.chatroom {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  background-image: url(http://r.photo.store.qq.com/psc?/V10ldMks1Z5QlW/TmEUgtj9EK6.7V8ajmQrEMaiIODNSzTBG85BVigfVhZ2oS3Z4dEuqLfZzHqCUOKvO4X.JHD*PlmM2xZApeydaujUwdFZ3U2D4i6glVcukwg!/r)
}

.chatroom .header {
  flex-basis: fit-content;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #ddd;
  font-size: 30rpx;
}

.chatroom .header .left {
  flex: 1;
}

.chatroom .header .middle {
  flex: 1;
  text-align: center;
}

.chatroom .header .right {
  flex: 1;
}

.chatroom .body {
  height: 100%;
  flex: 2;
  display: flex;
  flex-direction: column;
  background: rgb(237, 237, 237);
  background-image: url(http://m.qpic.cn/psc?/V10ldMks1Z5QlW/TmEUgtj9EK6.7V8ajmQrEIGDbf3saZcmEVijoUR7hdR6pV0d01FfD.cH*W7UcySHzWclTkjq44z78E.WR.yxKx8ag1p2d6FBtcq.1yOHeXA!/b&bo=AANWBQADVgUDFzI!&rf=viewer_4);
  padding-bottom: 3rpx;
}

.body .message {
  display: flex;
  flex-direction: row;
  position: relative;
  margin: 12rpx 0;
}

.body .message.message__self {
  flex-direction: row-reverse;
}

.body .message .avatar {
  position: relative;
  top: 5rpx;
  width: 60rpx;
  height: 60rpx;
  border-radius: 10rpx;
  margin: 15rpx;
}

.body .message .main {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.body .message.message__self .main {
  align-items: flex-end;
}

.body .message .nickname {
  font-size: 24rpx;
  color: #444;
}

.body .message .text-content {
  border: 1px solid transparent;
  border-radius: 5px;
  background-color: #fff;
  margin: 2rpx 0 0 0;
  padding: 10rpx 20rpx;
  font-size: 35rpx;
  display: inline-block;
  box-shadow: 1px 1px 2px 1px gainsboro;
  text-align: justify;
}

.body .message.message__self .text-content {
  background-color: paleturquoise;
}

.body .message .text-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
  max-width: 80%;
}

.body .message.message__self .text-wrapper .loading {
  font-size: 16rpx;
  margin-right: 18rpx;
}

.body .message .image-wrapper {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.body .message .image-content {
  width: 300rpx;
  max-height: 600rpx;
  border-radius: 10rpx;
  box-shadow: 1px 1px 2px 1px gainsboro;

}

.body .message.message__self .image-wrapper .loading {
  font-size: 20rpx;
  margin-right: 18rpx;
}

.chatroom .footer {
  flex-basis: fit-content;
  display: flex;
  flex-direction: row;
  font-size: 10rpx;
  padding: 30rpx;
  background: rgb(230, 230, 230);
}

.chatroom .footer .message-sender {
  flex: 1;
  display: flex;
  flex-direction: row;
}

.message-sender .text-input {
  flex: 1;
  font-size: 16px;
  border: 1px solid transparent;
  border-radius: 8rpx;
  padding: 3rpx 6rpx;
  margin: 0 10px 0 5px;
  background: rgb(247, 247, 247);
}

.message-sender .btn-send-image {
  width: 50rpx;
  height: 50rpx;
  align-self: center;
}

button {
  font-size: 30rpx;
}

button.userinfo {
  color: rgb(131, 131, 131);
  padding: 0 100rpx;
  background: linear-gradient(to right, rgba(106, 188, 235, 0.973), rgba(5, 226, 255, 0.801));
  border-radius: 50rpx;
  border: 5px solid rgb(245, 245, 245);
  filter: drop-shadow(-5rpx 0rpx 10rpx #a8a8a8);

}

.txt1 {
  font-weight: bold;
  color: whitesmoke;
  justify-content: center;
  display: flex;
  text-align: center;
  margin-top: 10rpx;
}

.hv {
  opacity: 0.7
}